# Environment Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/docdb

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=  # Optional

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb  # Options: chromadb, pinecone
CHROMADB_PATH=./chromadb_data  # Path for ChromaDB storage

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=document-embeddings

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,doc,txt

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100

# RAG Configuration
DEFAULT_TOP_K=4
SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=4000

# LLM Configuration
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
LLM_TEMPERATURE=0.1
MAX_TOKENS=2000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# N8N Integration (optional)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_BATCH_PROCESSING=true
ENABLE_AUTO_EXTRACTION=true
ENABLE_QUERY_LOGGING=true
ENABLE_METRICS=true

# Performance
MAX_CONCURRENT_UPLOADS=5
PROCESSING_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600
